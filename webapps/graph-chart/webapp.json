{
    "meta": {
        "label": "Graph chart",
        "description": "Custom chart to visualize datasets as graphs. These datasets must have source and target columns.",
        "icon": "icon-link"
    },

    "baseType": "STANDARD",
    "hasBackend": "true",

    "chart" : {
        "datasetParamName": "dataset",
        "leftBarLabel": "Chart parameters",
        "leftBarParams": [
            {
                "name": "max_nodes",
                "type": "INT",
                "label": "Max displayed nodes",
                "description": "+/- one node",
                "mandatory": true,
                "minI":1,
                "maxI":5000,
                "defaultValue": 50
            },
            {
                "name": "directed_edges",
                "type": "BOOLEAN",
                "label": "Directed edges",
                "description": "",
                "mandatory": false,
                "defaultValue": true
            },
            {
                "type": "SEPARATOR",
                "label": "Advanced"
            },
            {
                "name": "advanced_parameters",
                "type": "BOOLEAN",
                "label": "Show advanced options",
                "description": "",
                "mandatory": false,
                "defaultValue": false
            },
            {
                "type": "SEPARATOR",
                "label": "Nodes colors",
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "source_nodes_color",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Source nodes attribute",
                "description": "",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "target_nodes_color",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Target nodes attribute",
                "description": "",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "numerical_colors",
                "type": "BOOLEAN",
                "label": "Numerical colors",
                "description": "Use a numerical scale for colors",
                "mandatory": false,
                "defaultValue": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "type": "SEPARATOR",
                "label": "Nodes sizes",
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "source_nodes_size",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Source nodes attribute",
                "description": "",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            
            {
                "name": "target_nodes_size",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Target nodes attribute",
                "description": "",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "type": "SEPARATOR",
                "label": "Edges",
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "edges_width",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Width",
                "description": "Weight by default",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "edges_caption",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Label",
                "description": "",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            }
        ],
        "topBar": "STD_FORM",
        "topBarParams": [
            {
                "name": "source",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Source",
                "description": "",
                "mandatory": true
            },
            {
                "name": "target",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Target",
                "description": "",
                "mandatory": true
            }
        ],
        "canFilter": true,
        "canFacet": false
    }
}
